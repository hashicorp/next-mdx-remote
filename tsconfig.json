{
  "compilerOptions": {
    "module": "commonjs",
    "lib": ["es6", "dom"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "jsx": "preserve",
    "typeRoots": ["node_modules/@types", "./"]
  },
  "exclude": ["__tests__"]
}
